<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets"  xmlns:gap="http://phonegap.com/ns/1.0" id="com.style.panache" version="1.2.1">
 
    <name>Style Panache</name>
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    
    <gap:platform name="ios" />
    <gap:platform name="android" />
    
    <description>
        Your Personal Style Guide !!
    </description> 

    <author href="http://www.infinisystem.com" email="support@infiniteit.biz">
        Infini Systems
    </author>
    
    <icon src="icon.png" />
    <icon src="icon-57.png" platform="ios" width="57" height="57" />
    <!-- iPad -->
    <icon src="icon-72.png" platform="ios" width="72" height="72" />
    <icon src="icon-76.png" platform="ios" width="76" height="76" />
    <icon src="icon-120.png" platform="ios" width="120" height="120" />
    <icon src="icon-152.png" platform="ios" width="152" height="152" />

    <splash src="splash/ios/Default.png" platform="ios" width="320" height="480" />
    <splash src="splash/ios/Default2x.png" platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="splash/ios/Defaulti5.png" platform="ios" width="640" height="1136" />

    <!-- iPhone 6 -->
    <splash src="splash/ios/Defaulti6.png" platform="ios" width="750" height="1334" />
    <splash src="splash/ios/Defaulti6p.png" platform="ios" width="1242" height="2208" />
   
    <!-- iPad -->
    <splash src="splash/ios/Defaultip.png" platform="ios" width="768" height="1024" />
  
    <!-- Retina iPad -->
    <splash src="splash/ios/Defaultipr.png" platform="ios" width="1536" height="2048" />
    
    <preference name="phonegap-version" value="3.9.1" />
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />

    <gap:plugin name="org.apache.cordova.splashscreen" source="npm" />
    <gap:plugin name="org.apache.cordova.inappbrowser" source="npm" />
    <gap:plugin name="org.apache.cordova.file" source="npm" />
    <gap:plugin name="org.apache.cordova.file-transfer" source="npm" />
    <gap:plugin name="org.apache.cordova.camera" source="npm" />
    <gap:plugin name="org.apache.cordova.device" source="npm" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name="cordova-plugin-x-toast" source="npm" />
    <gap:plugin name="org.apache.cordova.statusbar" source="npm" />

    <gap:plugin name="nl.x-services.plugins.socialsharing" version="4.3.8" />
    <gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay"  version="1.2.0" />
    <gap:plugin name="com.pushwoosh.plugins.pushwoosh" version="3.4.2" />
    
    <access origin="*"/> <!-- allow all pages, use for development -->
    <allow-navigation href="*" />
    
    <preference name="StatusBarOverlaysWebView" value="true" />
    
    <gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.9.0">
        <param name="APP_ID" value="567167313435908" />
        <param name="APP_NAME" value="Style Panache" />
    </gap:plugin>
    
    <gap:plugin name="cordova-plugin-appsflyer" source="npm" />

    

</widget>