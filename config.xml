<?xml source="npm"  version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets"  xmlns:gap="http://phonegap.com/ns/1.0" id="com.style.panache" >

    <name>Style Panache</name>
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    
    <gap:platform name="ios" />
    <gap:platform name="android" />
    
    <description>
        Your Personal Style Guide !!
    </description>

    <author href="http://www.infinisystem.com" email="support@infiniteit.biz">
        Infini Systems
    </author>
    
    <icon src="icon.png" />
    <preference name="phonegap-version" value="cli-5.2.0" />             
    <gap:plugin name="org.apache.cordova.splashscreen" source="npm"  />
    <gap:plugin name="nl.x-services.plugins.socialsharing" source="npm"  />
    <gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay"  source="npm"  />
    <gap:plugin name="com.pushwoosh.plugins.pushwoosh" source="npm" />
    <gap:plugin name="nl.x-services.plugins.calendar"  source="npm" />  
    <gap:plugin name="org.apache.cordova.inappbrowser" source="npm"  />
    <gap:plugin name="org.apache.cordova.file" source="npm" />
    <gap:plugin name="org.apache.cordova.file-transfer" source="npm"  />
    <gap:plugin name="org.apache.cordova.camera" source="npm"  />
  

    <access origin="*"/> <!-- allow all pages, use for development -->
    <access origin="*.pushwoosh.com"/> <!-- allow pushwoosh service -->
    
    
    <gap:plugin name="com.phonegap.plugins.facebookconnect" source="npm">
        <param name="APP_ID" value="937502589613535" />
        <param name="APP_NAME" value="Pluckk" />
    </gap:plugin>
    
    

</widget>